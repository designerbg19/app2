{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - New depot
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>New depot <span class="glyphicon glyphicon-file" aria-hidden="true"></span> </h2>
    </div>
</div>
    
    
    
<div class="row">
    <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

 {{ form_start(form , {'attr':{'class':"form-horizontal" }})  }}
   
    <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nom">{{ form_label(form.nom,'Nom') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.nom ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>
   
  
    <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="address">{{ form_label(form.address,'Address') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.address ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>  
   
  
  <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nTel1">{{ form_label(form.nTel1,'NTel1') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.nTel1 ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>  
    

    
  <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nTel2">{{ form_label(form.nTel2,'NTel2') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.nTel2 ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>  
   

   
         <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="region">{{ form_label(form.region,'Region') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.region ,{'attr':{'class':'form-control' }}) }}
        </div>
        
       </div>  
    
    {{ form_widget(form) }}
    <p>
        <button type="submit" name="submit" value="save" class="btn btn-primary"> 
            Save <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        </button>
        <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info"> 
            Save and Add <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
    </p>


    {{ form_end(form) }}

    <hr/>

<div class="form-group">


    <a class="btn btn-default" href="{{ path('depot') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
</div>

</div>


{% endblock %}

