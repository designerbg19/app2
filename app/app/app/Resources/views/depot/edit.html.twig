{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} -  Edit depot
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>Edit depot <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
    </div>
</div>



<div class="row">
    <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

   {{ form_start(edit_form , {'attr':{'class':"form-horizontal" }})  }}
    <form class="form-horizontal">
    <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nom">{{ form_label(edit_form.nom,'Nom') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.nom ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>
    </form>
    <form class="form-horizontal">
    <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="address">{{ form_label(edit_form.address,'Address') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.address ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>  
    </form>
    <form class="form-horizontal">
     <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nTel1">{{ form_label(edit_form.nTel1,'NTel1') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.nTel1 ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>  
    </form>

    <form class="form-horizontal">
         <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nTel2">{{ form_label(edit_form.nTel2,'NTel2') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.nTel2 ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>  
    </form>

    <form class="form-horizontal">
         <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="region">{{ form_label(edit_form.region,'Region') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.region ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>  
    </form>

    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update
        </button>
    </p>
    {{ form_end(edit_form) }}

    <hr/>

    
<div class="form-group">
    <a class="btn btn-default" href="{{ path('depot') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-info" href="{{ path('depot_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <a form action="{{ path('depot_delete', { 'id': depot.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </a>
</div>

</div>


{% endblock %}

