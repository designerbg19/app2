{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - depot
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View depot <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ depot.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Nom</strong></p>
        <p>
            {{ depot.nom }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Address</strong></p>
        <p>
            {{ depot.address }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Ntel1</strong></p>
        <p>
            {{ depot.nTel1 }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Ntel2</strong></p>
        <p>
            {{ depot.nTel2 }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('depot') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('depot_edit', { 'id':  depot.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('depot_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <a form action="{{ path('depot_delete', { 'id': depot.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </a>
</div>


{% endblock %}

