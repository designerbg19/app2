{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - New lineCmd
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>New lineCmd <span class="glyphicon glyphicon-file" aria-hidden="true"></span> </h2>
    </div>
</div>
    
    
    
<div class="row">
    <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

      {{ form_start(form , {'attr':{'class':"form-horizontal" }})  }}
    
    <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Produit">{{ form_label(form.Produit,'Produit') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.Produit ,{'attr':{'class':'form-control' }}) }}
            
              
            
              
        </div>
        
    </div>

     <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Commande">{{ form_label(form.Commande,'Commande') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.Commande ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>

     <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="qte">{{ form_label(form.qte,'qte') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(form.qte ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>

     <div class="form-group">
    
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="prixTotal">{{ form_label(form.prixTotal,'prixTotal') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
      
            {{ form_widget(form.prixTotal ,{'attr':{'class':'form-control' }}) }}
        </div>
        
    </div>
    {{ form_widget(form) }}
    <p>
        <button type="submit" name="submit" value="save" class="btn btn-primary"> 
            Save <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span>
        </button>
        <button type="submit" name="submit" value="saveAndAdd" class="btn btn-info"> 
            Save and Add <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
    </p>


    {{ form_end(form) }}

    <hr/>

<div class="form-group">
    <a class="btn btn-default" href="{{ path('linecmd') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
</div>

</div>


{% endblock %}

