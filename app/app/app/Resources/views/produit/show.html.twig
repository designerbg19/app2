{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} - produit
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>View produit <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <p><strong>Id</strong></p>
        <p>
            {{ produit.id }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Imei</strong></p>
        <p>
            {{ produit.imei }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Prixachat</strong></p>
        <p>
            {{ produit.prixachat }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Prixveng</strong></p>
        <p>
            {{ produit.prixveng }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Prixvend</strong></p>
        <p>
            {{ produit.prixvend }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Qte</strong></p>
        <p>
            {{ produit.qte }}
        </p>

    </div>
    <div class="col-md-6">
        <p><strong>Magremise</strong></p>
        <p>
            {{ produit.magremise }}
        </p>

    </div></div>

<hr/>


<div class="form-group">
    <a class="btn btn-default" href="{{ path('produit') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-primary" href="{{ path('produit_edit', { 'id':  produit.id }) }}">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        Edit
    </a>
    <a class="btn btn-info" href="{{ path('produit_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>
    <form action="{{ path('produit_delete', { 'id': produit.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </form>
</div>


{% endblock %}

