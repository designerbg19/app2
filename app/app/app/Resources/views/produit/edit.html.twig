{% extends 'base.html.twig' %}

{% block title %}
{{ parent() }} -  Edit produit
{% endblock %}

{% block body %}

<div id="top" class="row">
    <div class="page-header">
        <h2>Edit produit <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h2>
    </div>
</div>



<div class="row">
    <div class="row">
    <div class="col-md-12">
        {% for type, flashMessages in app.session.flashbag.all() %} 
        {% for flashMessage in flashMessages %}
        <div class="alert alert-{{ type }}">
            {{ flashMessage|raw }}
        </div>
         {% endfor %} 
         {% endfor %} 
    </div>
</div>
    

    {{ form_start(edit_form , {'attr':{'class':"form-horizontal" }})  }}


    <div class="form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="imei">{{ form_label(edit_form.imei,'imei') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.imei ,{'attr':{'class':'form-control' }}) }}
        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="prixachat">{{ form_label(edit_form.prixachat,'prixachat') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.prixachat ,{'attr':{'class':'form-control' }}) }}
        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="prixvend">{{ form_label(edit_form.prixvend,'prixvend') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.prixvend ,{'attr':{'class':'form-control' }}) }}
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="prixveng">{{ form_label(edit_form.prixveng,'prixveng') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.prixveng ,{'attr':{'class':'form-control' }}) }}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="qte">{{ form_label(edit_form.qte,'qte') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.qte ,{'attr':{'class':'form-control' }}) }}
        </div>
    </div>


   <div class="form-group">
        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="magremise">{{ form_label(edit_form.magremise,'magremise') }}
            <span class="required">*</span>
        </label>
        <div class="col-md-6 col-sm-6 col-xs-12">
            {{ form_widget(edit_form.magremise ,{'attr':{'class':'form-control' }}) }}
        </div>
    </div>


    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">
            <span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Update
        </button>
    </p>
    {{ form_end(edit_form) }}

    <hr/>

    
<div class="form-group">
    <a class="btn btn-default" href="{{ path('produit') }}">
        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
        Back to list
    </a>
    <a class="btn btn-info" href="{{ path('produit_new') }}">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        New
    </a>

    <a form action="{{ path('produit_delete', { 'id': produit.id }) }}" method="post" style="display: inline-block">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure');">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            Delete
        </button>
    </a>
</div>

</div>


{% endblock %}

